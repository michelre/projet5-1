{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block content %}


  <div id="container">

    <div class="semicircle">
      <div class="semicircleleft">
        <div class="leftarrow">
        </div>
      </div>
    </div>

    <div>
      <img id="diapo" src="public/images/kitten_img1.jpg" alt="diaporama">
    </div>

    <div class="semicircle">
      <div class="semicircleright">
        <div class="rightarrow">
        </div>
      </div>
    </div>


    <div id="pause_inside">
      <div class="push" id="btn_pause">
      </div>
    </div>

    <div id="play_inside">
      <div class="push" id="btn_play">
      </div>
    </div>

    <div id="texte_diaporama">
    </div>
  </div>

  <div class="cards">
    <div>
      <h1>Elevage des Pompons</h1>
    </div>
    <div id="image_index_cards">
      <div>
        <h3 id="subtitle_index">Posts r√©cents</h3>
        <div class="button_blog">
          <a href="index.php?action=blog">
            Blog
          </a>
        </div>
      </div>
      <div id="joint">

        {% for article in articles %}
          <div class="joint">
            <div class="my_container">
              <div class="my_text">
                {{ article.article | u.truncate(60, '...') | raw }}
              </div>
              <div class="my_buttons">
                <div class="button_three">
                  <a href="index.php?action=postandcomments&amp;id={{ article.id }}">
                    Lire
                  </a>
                </div>
              </div>
            </div>
            <div class="bellow"></div>
          </div>
        {% endfor %}

      </div>
    </div>
  </div>



{% endblock %}